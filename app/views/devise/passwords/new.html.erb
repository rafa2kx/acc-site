<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"><strong><%= t 'devise.registrations.forgot_pass' %></strong></h2>
      <hr>
    </div>
    <div class="col-md-3 col-md-offset-4 ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email,"#{t 'devise.sessions.email_label'}" %><br />
            <%= f.email_field :email, autofocus: true,:class=>'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "#{t 'devise.passwords.send_email_pass'}", :class=>'btn btn-primary' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>